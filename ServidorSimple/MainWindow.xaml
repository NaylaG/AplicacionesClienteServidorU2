<Window x:Class="ServidorSimple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServidorSimple"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <UniformGrid Rows="1">
        <Button Name="btnIniciar" Click="btnIniciar_Click" Background="LightGreen" FontSize="25">Iniciar</Button>
        <Button Name="btnDetener" Click="btnDetener_Click" Background="LightPink" FontSize="25">Detener</Button>
    </UniformGrid>
</Window>
